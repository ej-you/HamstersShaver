# -----
# BUILD
# -----

FROM golang:1.22.4-alpine3.20 AS build

# set up workdir
WORKDIR /go/src

# install dependences
COPY ./go.mod .
COPY ./go.sum .
RUN go mod download

# copy project files to container
COPY . .

# compile app
RUN go build -o ./tg_bot ./main.go

# ---
# RUN
# ---

FROM alpine:3.20 AS run

# set up timezone +3
RUN apk update
RUN apk add --no-cache tzdata
RUN ln -s /usr/share/zoneinfo/Etc/GMT-3 /etc/localtime

# make dir for logs
RUN mkdir /logs

WORKDIR /app
# copy compiled file
COPY --from=build /go/src/tg_bot .

# run app
CMD ["/bin/sh", "-c", "/app/tg_bot 2>> /logs/error-log.log"]
